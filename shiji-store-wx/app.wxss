/**app.wxss**/

.container {
  box-sizing: border-box;
  background-color: #f4f4f4;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}

view, image, text, navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

view, text {
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  font-size: 29rpx;
  color: #333;
}

.flex-button {
  flex: 1;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}
.flex-button .flex-button-2 {
  flex: 1;
  width: 50%;
  height: 100rpx;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
  justify-content: center;
  align-items: center;
}
.flex-button .flex-button-3 {
  flex: 1;
  width: 33.33%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
  justify-content: center;
  align-items: center;
}